generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model user {
  id             BigInt       @id @default(autoincrement())
  username       String       @db.VarChar(100)
  password       String       @db.VarChar(255)
  name           String       @db.VarChar(100)
  phone          String?      @db.VarChar(15)
  mobile_phone   String?      @db.VarChar(15)
  email          String?      @db.VarChar(100)
  zip_code       String?      @db.Char(5)
  address_base   String?      @db.VarChar(255)
  address_detail String?      @db.VarChar(255)
  created_at     DateTime     @default(now()) @db.Timestamp(0)
  updated_at     DateTime     @default(now()) @db.Timestamp(0) @updatedAt
  deleted_at     DateTime?    @db.Timestamp(0)
  user_token     user_token[]
}

model user_token {
  id         BigInt   @id @default(autoincrement())
  user_id    BigInt
  token      String   @db.VarChar(255)
  created_at DateTime @default(now()) @db.Timestamp(0)
  expired_at DateTime @db.Timestamp(0)
  user       user     @relation(fields: [user_id], references: [id], onDelete: NoAction, onUpdate: NoAction, map: "FK_USER_TO_USER_TOKEN_1")

  @@index([user_id], map: "FK_USER_TO_USER_TOKEN_1")
}
